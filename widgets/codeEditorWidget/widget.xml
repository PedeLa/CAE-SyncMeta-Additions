  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/lodash.js/3.9.3/lodash.min.js"></script>
    <script type="text/javascript" src="http://eiche.informatik.rwth-aachen.de/editor/codeEditor/codeEditorWidget/bower_components/jquery/dist/jquery.min.js"></script>
  <script type="text/javascript" src="http://eiche.informatik.rwth-aachen.de/editor/codeEditor/codeEditorWidget/bower_components/yjs/y.js"></script>
